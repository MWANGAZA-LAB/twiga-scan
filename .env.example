# ========================================
# TWIGA SCAN - Environment Configuration
# ========================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# ========================================
# APPLICATION SETTINGS
# ========================================
PROJECT_NAME=Twiga Scan
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL (Recommended for Production)
DATABASE_URL=postgresql://twiga_user:your_secure_postgres_password@localhost:5432/twiga_scan

# SQLite (Development/Testing)
# DATABASE_URL=sqlite:///./twiga_scan.db

# ========================================
# REDIS CONFIGURATION (Optional)
# ========================================
REDIS_URL=redis://:your_secure_redis_password@localhost:6379/0

# ========================================
# SECURITY & AUTHENTICATION
# ========================================
# Generate with: openssl rand -base64 64
SECRET_KEY=your_super_secret_key_here_make_it_long_and_random_64_chars_minimum

# Generate with: openssl rand -base64 64
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_random_64_chars_minimum

JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin credentials (change immediately!)
ADMIN_PASSWORD=change_this_secure_admin_password

# ========================================
# CORS CONFIGURATION
# ========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:80,https://yourdomain.com

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info

# ========================================
# BITCOIN/LIGHTNING NETWORK
# ========================================
BITCOIN_NETWORK=mainnet
LIGHTNING_NETWORK=mainnet

# ========================================
# EXTERNAL APIS
# ========================================
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# ========================================
# FILE UPLOAD
# ========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# ========================================
# MONITORING & OBSERVABILITY
# ========================================
# Sentry DSN (Get from: https://sentry.io)
SENTRY_DSN=https://your_sentry_key@o123456.ingest.sentry.io/7654321

# Prometheus metrics
PROMETHEUS_ENABLED=true

# ========================================
# FRONTEND CONFIGURATION
# ========================================
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_ENVIRONMENT=production

# ========================================
# OPTIONAL FEATURES
# ========================================
MAX_SCAN_HISTORY=1000
ENABLE_WEBHOOK_NOTIFICATIONS=false
WEBHOOK_URL=https://your-webhook-endpoint.com/notify

# ========================================
# DATABASE CREDENTIALS (Docker Compose)
# ========================================
POSTGRES_PASSWORD=your_secure_postgres_password
REDIS_PASSWORD=your_secure_redis_password
